{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.trackerton.app",
  "productName": "Trackerton",
  "asar": true,
  "asarUnpack": [
    "**/*.node"
  ],
  "directories": {
    "output": "release"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      }
    ],
    "category": "public.app-category.productivity",
    "identity": null,
    "icon": "build/icon.icns",
    "hardenedRuntime": false
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "github",
    "owner": "HalcyonVagabond",
    "repo": "trackerton-desktop",
    "releaseType": "draft"
  }
}
